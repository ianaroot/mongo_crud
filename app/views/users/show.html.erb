<% if authorize(@user) %>
  <%= form_for @post do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title %><br>

    <%= f.label :content %><br>
    <%= f.text_area :content %><br>

    <%= f.hidden_field :user_id, value: @user.id %>

    <%= f.submit %>

  <% end %>
<% end %>

<% @posts.each do |post| %>
  <%= post.title %>
  <%= post.content %>
  <% if authorize(@user) %>
     <%= form_for(post, html: {method: :delete}) do |f| %>
       <%= f.submit value: "delete"%>
     <% end %>
   <% end %>
<% end %>