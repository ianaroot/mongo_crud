<h2><%= @user.email %></h2>
<% if authorize(@user) %>
  <%= form_for @post do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title %><br>

    <%= f.label :content %><br>
    <%= f.text_area :content %><br>

    <%= f.hidden_field :user_id, value: @user.id %>

    <%= f.submit %>

  <% end %>
<% end %>

<% @posts.each do |post| %>
  <div class="post">
    <br><h3><%= post.title %></h3>
    <%= post.content %><br>
  </div>
  <% if authorize(@user) %>
     <%= link_to "delete", post_path(post), method: :delete %>
     <%= link_to "edit", [:edit, post] %>
   <% end %>
<% end %>